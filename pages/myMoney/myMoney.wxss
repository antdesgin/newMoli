.total-info{
  width: 100%;
  height: 240rpx;
  background: #FF7054;
  color: #FFFFFF;
}
.total-title{
  font-size: 24rpx;
  margin-left: 40rpx;
  margin-top: 40rpx;
}
.total-money{
  font-size: 96rpx;
