}
.detail-list .detail-item:first-child{
  border-top: 2rpx solid #ECEAEA;
}
.detail-item{
  width: 100%;
  height: 126rpx;
  border-bottom: 2rpx solid #ECEAEA;
}

.item-title{
  display: inline-block;
  margin: 20rpx 0 0 40rpx;
}
.item-title view:first-child{
  font-size: 30rpx;
